@model bat.logic.Models.Profile.New
@{
    ViewBag.Title = "Add Family Member";
}

@{ Html.BeginForm("New", "Profile", FormMethod.Post); }

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>@ViewBag.Title</h1>
        <hr />
        @if (ViewBag.Error != null)
        {
            <p style="color: red; font-weight: bold">Error: @ViewBag.Error</p>
        }
    </div>
    <div class="col-md-4 col-md-offset-4">
        <div class="form-group">
            <label class="control-label">First name:</label>
            <input type='text' class="form-control" name="Fname" id="Fname" value="" />
        </div>
        <div class="form-group">
            <label class="control-label">Last name</label>
            <input type='text' class="form-control" name="Lname" id="Lname" value="" />
        </div>
        <div class="form-group">
            <label class="control-label">Email</label>
            <input type='email' class="form-control" name="Email" id="Email" value="" />
        </div>
        <div class="form-group">
            <label class="control-label">Password</label>
            <input type='password' class="form-control" name="Password" id="Password" value="" />
        </div>
        <div style="margin-top: 40px; overflow: auto;">
            <input type="submit" value="Ok" class="btn btn-lg btn-success pull-right" style="width: 110px;" />
            <a href="@Url.Action("Index")" class="btn btn-lg btn-default pull-right" style="width: 110px; margin-right: 20px;">
                Cancel
            </a>
        </div>
    </div>
</div>

@{ Html.EndForm(); }