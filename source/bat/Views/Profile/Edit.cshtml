@model bat.logic.ViewModels.Profile.Edit
@{
    ViewBag.Title = "Edit Profile";
}

 @{ Html.BeginForm("Edit", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }); }

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>@ViewBag.Title</h1>
            <hr />
            @if (ViewBag.Error != null)
            {
                <p style="color: red; font-weight: bold">Error: @ViewBag.Error</p>
            }
        </div>

        <div class="col-md-3 col-md-offset-3">
            <div class="form-group">
                <label class="control-label">First name</label>
                <input type='text' class="form-control" name="FirstName" id="FirstName" value="@Model.account.Fname" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label">Last name</label>
                <input type='text' class="form-control" name="Lastname" id="Lastname" value="@Model.account.Lname" />
            </div>
        </div>
        <div class="col-md-6 col-md-offset-3">
            @if (Model.account.AccountType_ID == (int)bat.logic.Constants.Types.AccountTypes.Teacher)
            {
                <div class="form-group">
                    <label class="control-label">Description</label>
                    <textarea type='text' class="form-control" name="Description">@Model.account.Description</textarea>
                </div>

                <div class="form-group">
                    <label class="control-label">Qualifications</label>
                    <textarea type='text' class="form-control" name="Qualifications">@Model.account.Qualifications</textarea>
                </div>

                <div class="form-group">
                    <label class="control-label">Rate</label>
                    <input type='number' class="form-control" name="Rate" id="Rate" step="any" min="0" value="@Model.account.Rate" />
                </div>

                <div class="form-group">
                    <label class="control-label">Picture</label>
                    <input type='file' class="form-control" name="Picture" id="Picture" />
                </div>
            }

            <div style="margin-top: 40px; overflow: auto;">
                <input type="submit" value="Ok" class="btn btn-lg btn-success pull-right" style="width: 110px;" />
                <a href="@Url.Action("Index")" class="btn btn-lg btn-default pull-right" style="width: 110px; margin-right: 20px;">
                    Cancel
                </a>
            </div>
        </div>
    </div>
@{ Html.EndForm(); }
