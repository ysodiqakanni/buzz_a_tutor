@using bat.logic.Constants
@model bat.logic.Models.Profile.Edit
@{
    ViewBag.Title = "Edit Profile";
}

<div class="row">
    @{ Html.BeginForm("Edit", "Profile", FormMethod.Post); }

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h1>@ViewBag.Title</h1>
            <hr />
            @if (ViewBag.Error != null)
            {
                <p style="color: red; font-weight: bold">Error: @ViewBag.Error</p>
            }
        </div>
        <div class="col-md-4 col-md-offset-4">
            <div class="form-group">
                <label class="control-label">First name</label>
                <input type='text' class="form-control" name="FirstName" id="FirstName" value="@Model.account.Fname" />
            </div>

            <div class="form-group">
                <label class="control-label">Last name</label>
                <input type='text' class="form-control" name="Lastname" id="Lastname" value="@Model.account.Lname" />
            </div>

            <div style="margin-top: 40px; overflow: auto;">
                <input type="submit" value="Ok" class="btn btn-lg btn-success pull-right" style="width: 110px;" />
                <a href="@Url.Action("Profile")" class="btn btn-lg btn-default pull-right" style="width: 110px; margin-right: 20px;">
                    Cancel
                </a>
            </div>
        </div>
    </div>

    @{ Html.EndForm(); }
</div>