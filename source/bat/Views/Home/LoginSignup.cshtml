@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Buzz a Tutor</title>

    <link rel="shortcut icon" type="image/png" href="@Url.Content("~/assets/img/fav32x32.ico")" />

    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet" media="screen" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700">

    @Styles.Render("~/assets/css/landinglogin")
    @Html.Partial("_PartialAzureApplicationInsights")
</head>

<body>
    <div class="outer">
        <div class="wrapper">
            <div class="signup-window">
                <div class="login-img">
                    <a href="@Url.RouteUrl("landing")">
                        <img src="@Url.Content("~/assets/img/Logo.png")" style="max-width:100%; max-height:100%;" />
                    </a>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <h3>Sign Up</h3>
                        @using (Html.BeginForm("Register", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken();
                            <div class="form-group">
                                <input type="text" name="firstname" value="@ViewBag.firstName" placeholder="First name" class="form-control required" required autofocus />
                            </div>
                            <div class="form-group">
                                <input type="text" name="lastName" value="@ViewBag.lastName" placeholder="Last Name" class="required form-control" required />
                            </div>
                            <div class="form-group">
                                <select id="role" name="type" class="form-control">
                                    <option value="@((int) bat.logic.Constants.Types.AccountTypes.Student)">I am a student</option>
                                    <option value="@((int) bat.logic.Constants.Types.AccountTypes.Teacher)">I am a teacher</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="email" name="email" value="@ViewBag.email" placeholder="Email address" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <input type="password" name="password" value="" placeholder="Password" class="form-control" required />
                            </div>
                            <div class="form-group">
                                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                                <p style="color: #000; text-align: center">@ViewBag.Error</p>
                                <button button class="btn btn-primary pull-right" type="submit" id="submit" name="submit" value="submit">Sign up</button>
                            </div>
                        }
                    </div>
                    <div class="col-sm-6">
                        <p style="padding-top: 60px;">
                            <a href="@Url.Action("Login", "Home")">Log in</a> if you have already signed up.
                        </p>
                    </div>
                </div>
            </div>

            <footer class="footer">
                <div class="container">
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.7.1/modernizr.min.js' type='text/javascript'></script>
</body>



</html>
