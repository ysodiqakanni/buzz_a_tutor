@model bat.logic.ViewModels.Homepage.ResetPassword
@{
    Layout = "~/Views/Shared/_LayoutContentOnly.cshtml";
    ViewBag.Title = "Forgot Password";
}

@using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken();

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @if (!string.IsNullOrEmpty(ViewBag.Response))
            {
                <p>
                    @ViewBag.Response
                </p>
            }
            else
            {
                <p>
                    Set your new password.
                </p>

                <input type="hidden" class="form-control" name="token" value="@Model.token">

                <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                    <input type="password" class="form-control" placeholder="New Password" name="txtPassword1" value="" required autofocus>
                </div>
                <div class="form-group" style="margin-top: 10px; margin-bottom: 10px;">
                    <input type="password" class="form-control" placeholder="Confirm" name="txtPassword2" value="" required>
                </div>

                <div style="overflow: auto; margin-top: 40px;">
                    <button type="submit" class="btn btn-primary pull-right">
                        Submit
                    </button>
                </div>
            }

            @if (ViewBag.ErrMsg != null)
            {
                <h4>@ViewBag.ErrMsg</h4>
            }
        </div>
    </div>
}
