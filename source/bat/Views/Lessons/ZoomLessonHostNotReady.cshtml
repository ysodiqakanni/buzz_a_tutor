@model bat.logic.ViewModels.Lessons.View
@{
    var user = new bat.logic.Rules.Authentication(Request.GetOwinContext()).GetLoggedInUser();
    var accInfo = bat.logic.Helpers.UserAccountInfo.GetAccount(user.ID);
    ViewBag.Title = "New Zoom User Account";
}

@section head {
}
@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
        });
    </script>
}
<h4>
    We are still waiting for the host ( @Model.host.Fname @Model.host.Lname ) to be signed on.
</h4>

<p style="margin-top: 40px;">
    Contact the host and join this lesson again.
</p>
<p style="margin-top: 40px;">
    <a href="@Url.Action("Index", new {id = Model.lesson.ID})" class="btn btn-primary">Join Lesson</a>

    &nbsp;

    @if (accInfo.IsTeacher)
    {
        <a href="@Url.Action("Edit", new { id = Model.lesson.ID })" class="btn btn-default">Edit lesson details</a>
    }
</p>