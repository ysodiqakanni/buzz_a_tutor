@model bat.logic.Models.Lessons.View
@{
    ViewBag.Title = "View Lesson";
}

@section head {
<link rel="stylesheet" type="text/css" href="~/assets/css/lessonStyle.css">
<link rel="stylesheet" type="text/css" href="~/assets/css/blackboard.css">
}
@section scripts {
}

<script>
    //These are manually generated session id and token. Production requires Sessions and tokens be generated by server.
    sessionId = "@Model.session";
    token = "@Model.token";
    lessonId = "@Model.lesson.ID";
    streamName = lessonId + "-@Model.host.ID";

    hostName = "@Model.host.Fname" + " " + "@Model.host.Lname";
    //connect(sessionId);
</script>

<h3>Lesson Page</h3>


<row>
    <div class="col-sm-10 topRow">
        <button id="start" class="btn btn-success" onclick="startStream(sessionId, token)">Start Stream</button>
        <button id="stop" class="btn btn-danger hidden" onclick="stopStream()">Stop Stream</button>  
    </div>
    <div class="col-sm-2">
        <div class="dropdown">
            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                Lesson Details
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>Date: @Model.lesson.BookingDate.ToString("dd/MM/yyyy hh:mm tt")</li>
                <li>Duration mins: @Model.lesson.DurationMins</li>
                <li>Class size: @Model.lesson.ClassSize</li>
                <li class="divider"></li>
                <li>Description: @Model.lesson.Description</li>
            </ul>
        </div>
    </div>
</row>
<div class="row">
    <div id="streamCon" class="col-sm-6">
        <div id="selfCon" class="col-sm-6">
            <div>
                <div id="streamBoxSelf" class="stream"></div>
            </div>
        </div> 
        <div id="otherCon" class="col-sm-6">
            <div>
                <div id="streamBoxOther" class="stream"></div>
            </div>
        </div> 
    </div>
    <div class="col-sm-1"></div>
    <div id="blackBoardCon" class="col-sm-5">
       @Html.Partial("_PartialWhiteboard")
    </div>
</div>
<div class="row" style="margin-top:15px">
    <div class="col-sm-12">
        @Html.Partial("_PartialChatBox")
    </div>
</div>

