@model bat.logic.Models.Lessons.View
@{
    ViewBag.Title = "View Lesson";
}

@section head {
<link rel="stylesheet" type="text/css" href="~/assets/css/lessonStyle.css">
<link rel="stylesheet" type="text/css" href="~/assets/css/blackboard.css">
<link rel="stylesheet" type="text/css" href="~/assets/css/chatStyle.css">
}
@section scripts {
}

<script>
    //These are manually generated session id and token. Production requires Sessions and tokens be generated by server.
    tbKey = "@bat.logic.Constants.TokBox.ApiKey";
    sessionId = "@Model.lesson.TokBoxSessionId";
    token = "@Model.token";
    lessonId = "@Model.lesson.ID";
    id = @Model.account.ID;
    username = "@Model.account.Fname" + " " + "@Model.account.Lname";
    role = @Model.account.AccountType_ID;
    if (role == '2'){
        // Is a teacher
        streamName = '@Model.account.ID-' + 'Teacher' + "-@Model.account.Fname";
    } else {
        // Is a student
        streamName = '@Model.account.ID-' + 'Student' + "-@Model.account.Fname";
    }

</script>

<div class="row">
    <div class="col-sm-8">
        <h2 style="margin-top: 0px;">@Model.lesson.Description</h2>
    </div>
    <div class="col-sm-2">
        <div class="dropdown pull-right">
            <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                Lesson Details
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li>
                    <p>
                        Date: @Model.lesson.BookingDate.ToString("dd/MM/yyyy hh:mm tt")
                    </p>
                </li>
                <li>
                    <p>
                        Duration mins: @Model.lesson.DurationMins
                    </p>
                </li>
                <li>
                    <p>
                        Class size: @Model.lesson.ClassSize
                    </p>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-sm-2 topRow">
        <div class="pull-right">
            <button id="start" class="btn btn-success btn-lg" onclick="startStream(sessionId, token)">Start Video</button>
            <button id="stop" class="btn btn-danger btn-lg hidden" onclick="stopStream()">Stop Video</button>
        </div>
    </div>
</div>

<hr/>

<div class="row">
    <div class="col-sm-6">
        <div class="row">
            <div class="col-sm-12" style="margin-bottom: 2%">
                <div id="teacherBox">
                    <div class="col-sm-6 stream">
                        <div class="streamHead">
                            <h3>@Model.host.Fname @Model.host.Lname</h3>
                        </div>
                        <div id="TeacherCon" class="streamBody">
                            <div id="teacher" class="streamWindow">
                                <div id="streamBoxTeacher"></div>
                            </div>
                        </div>
                    </div>
                    @if (Model.account.AccountType_ID == (int)bat.logic.Constants.Types.AccountTypes.Student)
                    {
                        <div id="selfBox" class="streamOther">
                            <div class="col-sm-6 stream">
                                <div class="streamHead">
                                    <h3>@Model.account.Fname @Model.account.Lname</h3>
                                </div>
                                <div id="selfCon" class="streamBody">
                                    <div id="self" class="streamWindow">
                                        <div id="streamBoxSelf"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @foreach (var other in Model.others.Where(o => o.ID != Model.account.ID))
                    {
                        <div id="otherBox-@other.ID" class="streamOther">
                            <div class="col-sm-6 stream">
                                <div class="streamHead">
                                    <h3>@other.Fname @other.Lname</h3>
                                </div>
                                <div id="otherCon-@other.ID" class="streamBody">
                                    <div id="other-@other.ID" class="streamWindow">
                                        <div id="streamBoxOther-@other.ID"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-sm-12">
                @Html.Partial("_PartialChatBox")
            </div> 
        </div>
    </div>  
    <div id="blackBoardCon" class="col-sm-6">
        @Html.Partial("_PartialWhiteboard", Model)
    </div>
</div>


    <!-- TokBox API  -->
<script src="https://static.opentok.com/v2/js/opentok.min.js"></script>

<!-- Link to local TokBox script  -->
<script type="text/javascript" src="~/assets/js/videoStreaming.js"></script>

<script>
    connect(sessionId);
</script>