@model bat.logic.ViewModels.Lessons.New
@{
    ViewBag.Title = "New Lesson";
}

@section head {
    <link rel="stylesheet" href="@Url.Content("~//assets/vendor/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css")">
    <link rel="stylesheet" href="@Url.Content("~//assets/vendor/bootstrap-select/bootstrap-select.min.css")">
}
@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/locale/en-au.js"></script>
    <script src="@Url.Content("~//assets/vendor/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js")"></script>
    <script src="@Url.Content("~//assets/vendor/bootstrap-select/bootstrap-select.min.js")"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#BookingDate').datetimepicker({
                locale: 'en-au'
            });
        });
    </script>
}
<h2>New Lesson</h2>


@{ Html.BeginForm("New", "Lessons", FormMethod.Post); }

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label">Date of lesson</label>
            <input type='text' class="form-control" name="BookingDate" id="BookingDate" value="@Model.lesson.BookingDate.ToString("dd/MM/yyyy hh:mm tt")" />
        </div>

        <div class="form-group">
            <label class="control-label">Duration in mins</label>
            <input type='number' step="15" class="form-control" name="DurationMins" id="DurationMins" value="@Model.lesson.DurationMins" />
        </div>

        <div class="form-group">
            <label class="control-label">Class size (zero (0) for no limit)</label>
            <input type='number' min="0" max="1000" step="1" class="form-control" name="ClassSize" id="ClassSize" value="@Model.lesson.ClassSize" />
        </div>
    </div>
    <div class="col-md-6">
        <div class="form-group">
            <label class="control-label required">Subject</label>
            <select class="form-control selectpicker" name="Subject" required>
                <option disabled selected>Select a Subject</option>
                <optgroup label="Maths">
                    @foreach (var s in bat.logic.Constants.Subjects.Maths)
                    {
                        <option value="Maths__@s">@s</option>
                    }
                </optgroup>
                <optgroup label="English">
                    @foreach (var s in bat.logic.Constants.Subjects.English)
                    {
                        <option value="English__@s">@s</option>
                    }
                </optgroup>
                <optgroup label="Science">
                    @foreach (var s in bat.logic.Constants.Subjects.Science)
                    {
                        <option value="Science__@s">@s</option>
                    }
                </optgroup>
                <optgroup label="Languages">
                    @foreach (var s in bat.logic.Constants.Subjects.Languages)
                    {
                        <option value="Languages__@s">@s</option>
                    }
                </optgroup>
            </select>
        </div>

        <div class="form-group">
            <label class="control-label required">Description</label>
            <textarea class="form-control" rows="5" placeholder="Description" name="Description" required>@Model.lesson.Description</textarea>
        </div>
    </div>
</div>

<div style="margin-top: 40px; overflow: auto;">
    <input type="submit" value="Ok" class="btn btn-lg btn-success pull-right" style="width: 110px;" />
    <a href="javascript:;" onclick="history.back();" class="btn btn-lg btn-default pull-right" style="width: 110px; margin-right: 20px;">
        Cancel
    </a>
</div>

@{ Html.EndForm(); }