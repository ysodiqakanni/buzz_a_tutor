@model bat.logic.ViewModels.Lessons.Join
@{
    ViewBag.Title = "Join Lesson";
}

@section head {

}
@section scripts {
}

@{ Html.BeginForm("Join", "Lessons", FormMethod.Post); }
<div class="row">
    <div class="col-md-4 col-md-offset-4 center">
        <h1>@Model.lesson.Description</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-2">
        <p><strong>Teacher:</strong> @Model.GetFullAccountName(Model.teacher.ID)</p>
        <p>
            <img style="height: 160px; width: 160px;" src="@Url.Action("DownloadResource", "ProfilePictureApi", new { id = Model.teacher.ID, name = Model.teacher.Fname})" alt="Profile Pic" />
        </p>
        <p>
            <strong>Teacher's Bio:</strong> @Model.teacher.Description
        </p>
        <p>
            <strong>Teacher's Qualifications:</strong> @Model.teacher.Qualifications
        </p>
    </div>
    <div class="col-md-4">
        @Html.Raw(HttpUtility.UrlDecode(Model.lesson.DetailedDescription))
        <p>
           <strong>Subject:</strong> @Model.lesson.Subject
        </p>
        <p>
            <strong>Date:</strong> @Model.lesson.BookingDate.ToString("dd/MM/yyyy hh:mm tt")
        </p>
        <p>
            <strong>Duration mins:</strong> @Model.lesson.DurationMins
        </p>
        <p>
           <strong>Class size:</strong> @Model.lesson.ClassSize
        </p>
    </div>
</div>
<div class="row">
    <div class="col-md-4 col-md-offset-4" style="margin-top: 40px; overflow: auto;">
        <a href="@Url.RouteUrl("list-lessons", new {subject = Model.Subject})" class="btn btn-lg btn-default" style="width: 110px; margin-right: 20px;">
            Cancel
        </a>
        <input type="submit" value="Join" class="btn btn-lg btn-success" style="width: 110px;" />
    </div>
</div>
@{ Html.EndForm(); }