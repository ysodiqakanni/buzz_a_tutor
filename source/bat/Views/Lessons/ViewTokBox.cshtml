    <!-- TokBox API  -->
    <script src="https://static.opentok.com/v2/js/opentok.min.js"></script>

    <!-- Link to local TokBox script  -->
    <script type="text/javascript" src="@Url.Content("~/assets/js/videoStreaming.js")"></script>
}

<script>
    //These are manually generated session id and token. Production requires Sessions and tokens be generated by server.

    tbKey = "@bat.logic.Constants.TokBox.ApiKey";
    sessionId = "@Model.lesson.TokBoxSessionId";
    token = "@Model.token";
    lessonId = "@Model.lesson.ID";
    id = @Model.account.ID;
    userFirstName = "@Model.account.Fname";
    username = "@Model.account.Fname" + " " + "@Model.account.Lname";
    role = @Model.account.AccountType_ID;
    if (role == '2'){
        // Is a teacher
        streamName = '@Model.account.ID-' + 'Teacher' + "-@Model.account.Fname";
    } else {
        // Is a student
        streamName = '@Model.account.ID-' + 'Student' + "-@Model.account.Fname";
    }
    var deleteResourceUrl = '@Url.Action("DeleteResource", "Lessons", new { id = Model.lesson.ID })';
    var IsHost = "false";
    var IsHaveControl = "false";
    var exitMode = false;
    var hostId = @Model.host.ID;
    if(hostId == id)
    {
        IsHost = "true";
        IsHaveControl = "true";
        exitMode = true;
    }
</script>

@section outsideContainer {
    <input type="hidden" id="hdnConnId" />
    <input type="hidden" id="hdnUserId" />
    <div class="row nomarginrow" style="margin-top:-60px;">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12" style="margin-bottom:2px;">
                    <div class='inline'><div><span style="font-weight: bold;">Teacher - </span><span style="font-size: 15px;">@Model.host.Fname @Model.host.Lname</span></div></div>
                    &nbsp;&nbsp;
                    <div class='inline'><div><span style="font-weight: bold;">Lesson - </span><span style="font-size: 15px;">@Model.lesson.Description</span></div></div>
                    &nbsp;&nbsp;
                    <div class='inline'><button data-toggle="tooltip" data-placement="bottom" title="Save" id="btnSaveWhiteboard" class="btn btn-sm btn-danger" style="font-weight: bold;" onclick="SaveWhiteBoard();"><i class="fa fa-floppy-o" aria-hidden="true"></i></button></div>
                    &nbsp;&nbsp;
                    <div class='inline'><button data-toggle="tooltip" data-placement="bottom" title="Download" id="btnDownlaodWhiteboard" class="btn btn-sm btn-danger" style="font-weight: bold;" onclick="DownloadWhiteboard();"> <i class="fa fa-download" aria-hidden="true"></i></button></div>
                    &nbsp;&nbsp;
                    <div class='inline'><button data-toggle="tooltip" data-placement="bottom" title="Upload" id="btnUploadWhiteboard" class="btn btn-sm btn-danger" style="font-weight: bold;" onclick="uploadImageModal();"> <i class="fa fa-upload" aria-hidden="true"></i></button></div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-5" id="middle-content">
                    @*<div id="whiteBoardController">a</div>*@
                    @Html.Partial("_PartialWhiteboard", Model)
                </div>
                <div class="col-lg-3" id="chat-content">
                    @Html.Partial("_PartialChatBox", Model)
                </div>
                <div class="col-lg-4" id="video-content">
                    <button type="button" id="start" class="button button-3d button-small button-rounded button-red" onclick="startStream(sessionId, token)"><i class="icon-video"></i>Start Video</button>
                    <button type="button" id="stop" class="button button-3d button-small button-rounded  hidden" onclick="stopStream()"><i class="fa fa-stop"></i>Stop Video</button>
                    <div id="video-wrap">
                        <div id="teacher" class="streamWindow">
                            <div id="streamBoxTeacher"></div>
                        </div>
                        <div class="clear"></div>

                        <div id="shop" class="clearfix ">
                            <div id="oc-images" class="owl-carousel image-carousel">
                            </div>
                            <script type="text/javascript">
                                $(document).ready(function($) {
                                    var ocImages = $("#oc-images");

                                    ocImages.owlCarousel({
                                        margin: 10,
                                        nav: true,
                                        navText: ['<i class="icon-angle-left"></i>', '<i class="icon-angle-right"></i>'],
                                        autoplay: false,
                                        autoplayHoverPause: true,
                                        dots: false,
                                        navRewind: false,
                                        responsive: {
                                            0: { items: 4 },
                                            600: { items: 3 },
                                            1000: { items: 3 },
                                            1200: { items: 4 }
                                        }
                                    });
                                });
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="test-left">
        <div style="background:#cccccc;border:1px solid #cccccc;">
            <div class="dropdown" style="margin-left: 5px;">
                <div class='inline' style="font-weight: bold;"><div>@Model.lesson.Description</div></div>
                <div class="dropdown-toggle" type="button" data-toggle="dropdown" style="font-size: smaller;">
                    <div class='inline'><div style="cursor: pointer;">@Model.lesson.Subject<span class="caret"></span></div></div>
                </div>
                <ul class="dropdown-menu" role="menu">
                    <li role="presentation" class="have-child">
                        @if (Model.IsTeacher)
                        {
                            <a href="@Url.Action("Reschedule", new {id = Model.lesson.ID})" class="btn btn-md btn-default">
                                <i class="fa fa-calendar"></i> Reschedule lesson
                            </a>
                            <a href="@Url.Action("Edit", new {id = Model.lesson.ID})" class="btn btn-md btn-default">
                                <i class="fa fa-edit"></i> Edit lesson details
                            </a>
                        }
                        <a href="@Model.lesson.ZoomJoinUrl" target="_blank" class="btn btn-md btn-primary">
                            <i class="fa fa-video-camera"></i> Start video
                        </a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="user">
            @if (string.IsNullOrEmpty(Model.host.Picture))
            {
                <img style="height: 50px; width: 50px;" src="@Url.Content("~/assets/img/default-avatar.png")" alt="Profile Pic" />
            }
            else
            {
                <img style="height: 50px; width: 50px;" src="@Url.Action("DownloadResource", "ProfilePictureApi", new { id = Model.host.ID, name = Model.host.Fname})" alt="Profile Pic" />
            }
            <a class="navbar-link">@Model.host.Fname @Model.host.Lname</a>
            <div style="font-size: 15px;text-align: left;">
                Date: @Model.lesson.BookingDate.ToString("dd/MM/yyyy hh:mm tt")<br />
                Duration mins: @Model.lesson.DurationMins<br />
                Class size: @Model.lesson.ClassSize
            </div>
        </div>
        <div>
            <div style="overflow:auto;font-size: 18px;margin-left: 10px;">
                <ul id="attendees">
                    <span style="font-weight:bold">Attendees</span>
                    @foreach (var student in Model.others)
                    {
                        <li>
                            <i class="fa fa-user"></i> <span>@student.Fname @student.Lname</span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="uploadModalLabel">
        <div style="width:630px" class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="no-margin">Upload an image to use on the Blackboard</h4>
                </div>
                <div class="modal-body">
                    <input style="margin-bottom: 2px;" type="file" class="form-control" name="UploadBlackboardimage" id="bbImageInput" />
                    <div id="preview-carousel" class="carousel slide">
                        <div id="canvasCarousel" class="carousel-inner" role="listbox">
                        </div>
                    </div>
                    <div id="bbImageError"></div>
                </div>
                <div class="modal-footer">
                    <div class="pull-right" id="modal-button-container">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="BBListModal" tabindex="-1" role="dialog" aria-labelledby="BBListModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <div class="form-group">
                        @*<input type="text" class="modal-title form-control" id="BBListTitle">*@
                        <h4>Download Image on Whiteboard</h4>
                    </div>
                </div>
                <div class="modal-body">
                    <div id="BBListContainer" style="width:100%;">
                        <div id="bbImage-list">
                            @foreach (var resource in Model.lessonResources)
                            {
                                if (resource.Type_ID == bat.logic.Constants.Types.Image)
                                {
                                    <div style="overflow: auto;">
                                        <button class="btn btn-link pull-left" onclick="loadCloudImg('@resource.ID')">
                                            @resource.Original_Name
                                        </button>

                                        <a href="@Url.Action("DeleteResource", "Lessons", new {id = Model.lesson.ID, resourceId = resource.ID})"
                                           class="pull-right" style="padding: 10px;">
                                            <i class="fa fa-remove"></i>
                                        </a>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    @*<button type="button" class="btn btn-primary">Load Image</button>*@
                </div>
            </div>
        </div>
    </div>

}


